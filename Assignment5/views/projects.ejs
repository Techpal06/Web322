<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/main.css" rel="stylesheet">
    <title>Projects - Climate Solutions</title>
</head>
<body>
    <!-- Navbar with active projects link -->
    <%- include('partials/navbar', {page: '/solutions/projects'}) %>

    <!-- Hero Section with Filter Links -->
    <div class="hero min-h-[200px] bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-2xl">
                <h1 class="text-5xl font-bold mb-6">Projects</h1>
                <p class="mb-8">Browse our collection of climate solution projects</p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/solutions/projects?sector=land" class="btn btn-outline">Land Sinks</a>
                    <a href="/solutions/projects?sector=transportation" class="btn btn-outline">Transportation</a>
                    <a href="/solutions/projects?sector=elec" class="btn btn-outline">Electricity</a>
                    <a href="/solutions/projects?sector=industry" class="btn btn-outline">Industry</a>
                    <a href="/solutions/projects?sector=agriculture" class="btn btn-outline">Food, Agriculture, and Land Use</a>
                    <a href="/solutions/projects" class="btn btn-primary">View All</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Table -->
    <div class="container mx-auto px-4 py-12">
        <div class="overflow-x-auto">
            <table class="table w-full">
                <!-- Table Header -->
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Sector</th>
                        <th>Summary</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <!-- Table Body with Projects -->
                <tbody>
                    <% projects.forEach(project => { %>
                        <tr>
                            <td><%= project.title %></td>
                            <td>
                                <a href="/solutions/projects?sector=<%= project.Sector.sector_name %>" 
                                   class="btn btn-sm btn-outline">
                                    <%= project.Sector.sector_name %>
                                </a>
                            </td>
                            <td><%= project.summary_short %></td>
                            <td>
                                <a href="/solutions/projects/<%= project.id %>" 
                                   class="btn btn-sm btn-primary">
                                    Details
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>